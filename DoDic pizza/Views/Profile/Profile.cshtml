@model DoDic_pizza.Models.ProfileViewModel

@{
    ViewData["Title"] = "Профиль";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background: linear-gradient(to bottom right, #ffcc99, #ff9966);
        margin: 0;
        padding: 20px;
    }

    .container {
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    h2 {
        font-size: 2.5em;
        color: #333;
        text-align: center;
        margin-bottom: 20px;
    }

    h4 {
        font-size: 1.75em;
        color: #555;
        margin-bottom: 15px;
    }

    dl.row {
        margin: 0;
    }

    dt {
        font-weight: bold;
        color: #333;
    }

    dd {
        margin-bottom: 15px;
        font-size: 1.25em;
        color: #555;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        font-size: 1.1em;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>

<h2>@ViewData["Title"]</h2>

<div class="container">
    <h4>Информация о пользователе</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Имя</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Телефон</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Электронная почта</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Дата рождения</dt>
        <dd class="col-sm-10">@Model.Birthdate</dd>
    </dl>
    <div class="text-center">
        <a asp-action="EditProfile" class="btn btn-primary">Редактировать профиль</a>
    </div>
</div>
