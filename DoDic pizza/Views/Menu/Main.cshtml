        new { ImageUrl = ViewData["DrinkImage1"], Name = "Чифир" },
        new { ImageUrl = ViewData["DrinkImage2"], Name = "Фанки Манки" },
        new { ImageUrl = ViewData["DrinkImage3"], Name = "Целебное снадобье" }
    };

    var combo = new[]
