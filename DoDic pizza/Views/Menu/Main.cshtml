        new { ImageUrl = ViewData["ImageUrl3"], Name = "Purple hat" },
        new { ImageUrl = ViewData["ImageUrl3"], Name = "Snakehaze" },
        new { ImageUrl = ViewData["ImageUrl3"], Name = "Donkey house luxe" },
